<% layout('layout/boilerplate') %>
<div class="row my-5">
    <h1 class="text-center">New campground</h1>
<div class="col-6 offset-3">    
    <form method="POST" action="/campground/new">
    <div class="form-group">
      <label class="form-label" for="title">Title</label>
      <input type="text" class="form-control" id="title" name="campground[title]" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label class="form-label" for="title">Location</label>
        <input class="form-control" type="text" id="location" name="campground[location]" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label class="form-label" for="image">Location</label>
        <input class="form-control" type="text" id="image" name="campground[image]" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
        <label class="input-group-text" id="price-label">$</label>
        <input class="form-control" type="number" id="price" name="campground[price]" aria-describedby="price" placeholder="0">
    </div></div>

    <button type="submit" class="btn btn-primary my-3">Add campground</button>
  </form>
  </div></div>